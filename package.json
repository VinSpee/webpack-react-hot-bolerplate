{
  "name": "react-webpack2-boilerplate",
  "version": "1.0.0",
  "description": "React cutting edge boilerplate",
  "main": "index.js",
  "author": "Micahel Pevzner",
  "license": "MIT",
  "scripts": {
    "start": "run-p dev test:watch",
    "dev": "env NODE_ENV=development webpack-dev-server --progress --colors",
    "build": "rimraf dist && env NODE_ENV=production webpack  --colors",
    "pretest": "yarn lint; yarn lint:typecheck",
    "lint": "eslint src",
    "lint:fix": "yarn run lint -- --fix",
    "lint:typecheck": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "webpack v2",
    "react",
    "react-hot-loader v3",
    "splitting",
    "react-router v4"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/config/test-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/components/dashboard/index.js",
      "!src/hot.js"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathDirs": [
      "<rootDir>/src"
    ]
  },
  "babel": {
    "presets": [
      [
        "es2015"
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "syntax-flow",
      "babel-plugin-transform-class-properties",
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-inline-elements",
          "transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      }
    }
  },
  "eslintConfig": {
    "plugins": [
      "flowtype",
      "redux-saga"
    ],
    "env": {
      "jest": true,
      "browser": true
    },
    "globals": {
      "it": true,
      "describe": true,
      "test": true,
      "expect": true,
      "react": true,
      "mount": true,
      "shallow": true,
      "render": true,
      "React": true
    },
    "parser": "babel-eslint",
    "extends": [
      "plugin:flowtype/recommended",
      "airbnb"
    ],
    "rules": {
      "react/no-unused-prop-types": 0,
      "no-debugger": 1,
      "no-mixed-operators": 0,
      "no-confusing-arrow": 0,
      "react/jsx-filename-extension": 0,
      "import/extensions": 0,
      "import/no-named-as-default-member": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-absolute-path": 0,
      "import/no-duplicates": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "config/webpack.config.js"
        }
      }
    }
  },
  "dependencies": {
    "autoprefixer": "^6.5.4",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.20.0",
    "css-loader": "^0.26.1",
    "cssnano": "^3.9.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.12.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-redux-saga": "^0.3.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "flow-bin": "^0.37.4",
    "global": "^4.3.1",
    "history": "4",
    "html-webpack-plugin": "^2.24.1",
    "isparta": "^4.0.0",
    "jsdom": "^9.9.1",
    "jsdom-no-contextify": "^3.1.0",
    "postcss-at-rules-variables": "^0.0.26",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-conditionals": "^2.0.3",
    "postcss-cssnext": "^2.9.0",
    "postcss-each": "^0.9.3",
    "postcss-for": "^2.1.1",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "react": "^15.4.1",
    "react-addons-shallow-compare": "^15.4.1",
    "react-dev-utils": "^0.4.2",
    "react-dom": "^15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.0",
    "react-router": "4.0.0-alpha.6",
    "react-router-redux": "^4.0.7",
    "react-test-renderer": "^15.4.1",
    "redux": "^3.6.0",
    "redux-action-types-creator": "^1.1.0",
    "redux-create-reducer": "^1.1.1",
    "redux-devtools-extension": "^1.0.0",
    "redux-saga": "^0.14.2",
    "rimraf": "^2.5.4",
    "sanitize.css": "^4.1.0",
    "shed-css": "^1.0.0",
    "style-loader": "^0.13.1",
    "webpack": "2.2.0-rc.2",
    "webpack-dev-server": "2.2.0-rc.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-merge": "^1.1.1",
    "yarn": "latest"
  },
  "devDependencies": {
    "babel-jest": "^18.0.0",
    "fetch-jsonp": "^1.0.5",
    "jest": "^18.1.0",
    "npm-run-all": "^4.0.0",
    "react-addons-test-utils": "^15.4.2",
    "redux-mock-store": "^1.2.1",
    "redux-saga-testing": "^1.0.2"
  }
}
